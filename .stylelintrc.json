{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "rules": {
    "no-empty-source": null,
    "import-notation": "string",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "import",
          "function",
          "for",
          "if",
          "each",
          "include",
          "mixin",
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
